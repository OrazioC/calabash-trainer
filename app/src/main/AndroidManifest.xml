<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blinkboxmusic.android_sample_app" >

    <!-- We need this permission to interact with Instrumentation Test server -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.blinkboxmusic.android_sample_app.SignInActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.blinkboxmusic.android_sample_app.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.blinkboxmusic.android_sample_app.ShowItemActivity"
            android:label="@string/title_activity_show_item" >
        </activity>

        <provider
            android:name=".SpacecraftContentProvider"
            android:authorities="bbm"
            android:enabled="true"
            android:exported="true" >
        </provider>
    </application>

</manifest>
